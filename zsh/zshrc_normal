############################## Utils

iconv_to_utf8()
{
    local filename=$1
    local dir=$(dirname $filename)
    local file=$(basename $filename)
    local bakfile=${file}_bak
    local tmpfile=${file}_tmp

    cp $dir/$file $dir/$bakfile

    iconv -f GB18030 -t UTF-8 $dir/$file > $dir/$tmpfile
    mv $dir/$tmpfile $dir/$file
}

